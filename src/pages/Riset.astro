---
import Mainlayout from '../layout/Mainlayout.astro'
import Data from '../componet/data.json'

---

<Mainlayout>
    <div class="px-12 py-12 gap-x-10 flex flex-row justify-center items-centers w-full h-[36em] bg-auto bg-no-repeat bg-right-top bg-[url(/public/bg.png)]">
		<div class="flex mt-10 flex-col gap-y-5 items-start animate__animated animate__fadeInLeft">
			<h1 class="text-7xl font-bold max-w-md">SELAMAT DATANG</h1>
			<p class="text-xl  font-bold italic text-orange-400">Di HomeBase Riset DataKite</p>
			<a href="/" class="px-5 py-2 w-32 bg-slate-800 text-white font-bold rounded-md">Get Started</a>
		</div>

		<div>
			<img src="/icon4.png" alt="" class="w-[30em] animate__animated animate__fadeInRight">
		</div>
	</div>

	<div class="px-12 mt-5 w-full h-[30%]">

		<ul class="list-disc">
			{Data.map(item =>(
				<li>
					<p>Nama :{item.nama}</p>
					<p>Pekerjaan :{item.pekerjaan}</p>
					<p>Alamat :{item.alamat}</p>
				</li>

			))}
		</ul>

	</div>

 </Mainlayout>

